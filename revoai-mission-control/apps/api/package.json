{
  "name": "@revoai/api",
  "version": "0.1.0",
  "private": true,
  "type": "commonjs",
  "prisma": {
    "schema": "apps/api/prisma/schema.prisma"
  },
  "scripts": {
    "predev": "npm run prisma:generate",
    "dev": "nest start --watch",
    "prebuild": "npm run prisma:generate",
    "build": "nest build",
    "prestart": "npm run prisma:generate",
    "start": "node dist/main",
    "prisma:generate": "prisma generate --schema=apps/api/prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema=apps/api/prisma/schema.prisma",
    "prisma:migrate:deploy": "prisma migrate deploy --schema=apps/api/prisma/schema.prisma"
  },
  "dependencies": {
    "@nestjs/common": "^10.4.8",
    "@nestjs/core": "^10.4.8",
    "@nestjs/platform-express": "^10.4.8",
    "@nestjs/platform-socket.io": "^10.4.8",
    "@nestjs/websockets": "^10.4.8",
    "@prisma/client": "^5.21.1",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "ioredis": "^5.4.1",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.1"
  },
  "devDependencies": {
    "@nestjs/cli": "^10.4.5",
    "@nestjs/schematics": "^10.1.4",
    "@nestjs/testing": "^10.4.8",
    "prisma": "^5.21.1",
    "ts-node": "^10.9.2",
    "typescript": "^5.6.3"
  }
}
